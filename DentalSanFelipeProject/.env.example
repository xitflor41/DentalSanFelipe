# Configuración de entorno para Docker
# Copia este archivo como .env y personaliza los valores

# ==========================================
# BASE DE DATOS
# ==========================================
DB_ROOT_PASSWORD=rootpassword
DB_NAME=dental_sanfelipe
DB_USER=dentaluser
DB_PASSWORD=dentalpass
DB_PORT=3306

# ==========================================
# PUERTOS DE LA APLICACIÓN
# ==========================================
BACKEND_PORT=3000
FRONTEND_PORT=4200

# ==========================================
# SEGURIDAD JWT
# ==========================================
# IMPORTANTE: Cambia estos secretos en producción
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_cambiala_en_produccion
JWT_REFRESH_SECRET=tu_clave_secreta_refresh_jwt_muy_segura
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# WHATSAPP (Opcional)
# ==========================================
# Cambiar a true para activar notificaciones de WhatsApp
WHATSAPP_ENABLED=false

# Credenciales de Twilio (si usas WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# ==========================================
# ENTORNO
# ==========================================
NODE_ENV=production
