# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================
PORT=3000
NODE_ENV=development

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=root
DB_NAME=dental_sanfelipe

# ==========================================
# SEGURIDAD Y AUTENTICACIÓN
# ==========================================
# Cambia estos secretos en producción por valores seguros y únicos
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_cambiala_en_produccion
JWT_REFRESH_SECRET=tu_clave_secreta_refresh_jwt_muy_segura_cambiala_en_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# CONFIGURACIÓN DE USUARIO ADMINISTRADOR
# ==========================================
# Contraseña para el usuario admin inicial (seed)
SEED_ADMIN_PASS=Admin123!

# ==========================================
# NOTIFICACIONES WHATSAPP
# ==========================================
# Opción 1: WhatsApp Business API (Meta/Facebook)
# Para obtener credenciales:
# 1. Ve a https://developers.facebook.com/
# 2. Crea una app de WhatsApp Business
# 3. Obtén tu Phone Number ID y Access Token

WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_ID=tu_phone_number_id
WHATSAPP_TOKEN=tu_access_token

# Opción 2: Twilio (alternativa)
TWILIO_ACCOUNT_SID=tu_account_sid_de_twilio
TWILIO_AUTH_TOKEN=tu_auth_token_de_twilio
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
WHATSAPP_SIMULATION_MODE=true

# ==========================================
# ALMACENAMIENTO DE ARCHIVOS
# ==========================================
# Ruta donde se almacenarán los archivos adjuntos
UPLOAD_PATH=./uploads/adjuntos
MAX_FILE_SIZE=10485760

# ==========================================
# CORS
# ==========================================
# URL del frontend para CORS
FRONTEND_URL=http://localhost:4200

# ==========================================
# WORKER DE NOTIFICACIONES
# ==========================================
# Intervalo en milisegundos para verificar notificaciones pendientes
NOTIFICATION_WORKER_INTERVAL=30000
NOTIFICATION_MAX_RETRIES=3
